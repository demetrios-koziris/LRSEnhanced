{
    "name": "LRS Enhancer",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "add key events to LRS",
    "background":
    {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
      "default_title": "Enhance LRS!"
    },
    "permissions":
    [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}